<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @blog.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @blog.content %>
</p>

<p>
  <strong>Image:</strong>
  <% if @blog.image.attached? %>
    <%= image_tag @blog.image.variant(resize_to_limit: [600, 600]) %>
  <% end %>
</p>

<%= link_to "Edit", edit_blog_path(@blog) %> |
<%= link_to "Back", blogs_path %>
